<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed / focused state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FFB0B0B0"
                android:endColor="#FF8A8A8A" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FF777777" />
            <solid android:color="#FF9E9E9E" />
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FFC7C7C7"
                android:endColor="#FFAFAFAF" />
            <stroke
                android:width="1dp"
                android:color="#FF9A9A9A" />
        </shape>
    </item>
</selector>
